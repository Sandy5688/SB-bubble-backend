          }
        },
        {
          "name": "4. Activate Grace Tier",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{access_token}}"}
            ],
            "url": {
              "raw": "{{base_url}}/payment/grace-activate",
              "host": ["{{base_url}}"],
              "path": ["payment", "grace-activate"]
            }
          }
        }
      ]
    },
    {
      "name": "Account Management",
      "item": [
        {
          "name": "1. Request Account Deletion",
